{
    "name": "rezon/sugi",
    "type": "library",
    "description": "PHP5 Framework",
    "authors": [
        {
            "name": "Plamen Popov",
            "email": "tzappa@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/php-invoker": "*",
        "leafo/lessphp": "dev-master",
        "tedivm/jshrink": "dev-master"
    },
    "config": {
        "bin-dir": "bin"
    },    
    "suggest": {
        "leafo/lessphp": "Include this LESS compiler to enable .less files to be added to the CSSPacker.",
        "tedivm/jshrink": "Include JShrink to use compression in JSPacker"
    },
    "autoload": {
        "psr-0": {"Sugi": ""}
    },
    "scripts": {
        "pre-install-cmd":      "Sugi\\ComposerScripts::preInstall",
        "post-install-cmd":     "Sugi\\ComposerScripts::postInsall",
        "pre-update-cmd":       "Sugi\\ComposerScripts::preUpdate",
        "post-update-cmd":      "Sugi\\ComposerScripts::postUpdate",
        "post-package-install": "Sugi\\ComposerScripts::postPackageInstall",
        "post-package-update":  "Sugi\\ComposerScripts::postPackageUpdate"
    }
}
